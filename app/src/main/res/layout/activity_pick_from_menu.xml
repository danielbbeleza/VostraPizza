<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.vostrapizza.PickFromMenu"
    android:background="@color/green_pastel_main_activity_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ExpandableListView
            android:layout_weight="1"
            android:id="@+id/pizza_expandable_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:divider="@color/gray_dashed_line_separator"
            android:dividerHeight="2dp"
            android:background="@color/green_pastel_main_activity_background"
            >
        </ExpandableListView>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_pick_from_menu"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:background="@color/salmon_secondary_color"
            android:visibility="gone">

            <include
                android:id="@+id/bottom_toolbar"
                layout="@layout/bottom_toolbar_pick_from_menu"
                android:layout_height="match_parent"
                android:layout_width="match_parent"/>


        </android.support.v7.widget.Toolbar>
    </LinearLayout>

</LinearLayout>